<h1>New Ad</h1>
<div class="form-margin">
<%= form_for Ad.new do |f|%>
<% if @ads && @ad.errors.any? %>
  <div class="alert-danger id="error_explanation">
      <% @ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </div>
<% end %>

<%= render partial: "form", locals: {f: f }%>

<div align="center"><br/>
<div class="form-group">
  <button type="submit" class="btn btn-success" name="New">Create Ad</button>
</div>
</div>


<% end %>
</div>
