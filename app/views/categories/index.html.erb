<h1>Categories</h1>
<div class="form-margin">
<table class="table table-rows">
  <thead>
    <tr>
      <td><strong>ID</strong></td>
      <td><strong>Label</strong></td>
    </tr>
  </thead>
<tbody>
  <% @categories.each do |category|%>
  <tr>
  <td><%= category.id %></td>
  <td><%= category.label %></td>
  <td><a href="<%= edit_category_path(category.id) %>" class = "btn btn-primary"> Edit </a></td>
  <td><a href="<%= category_path(category.id)%> " class="btn btn-danger"  data-confirm="Are you sure ?" data-method="DELETE"> Remove </a></td>
  </tr>
  <% end %>
</tbody>
</table>
  <td><a href="<%= new_category_path%>" class = "btn btn-success"> New Category </a></td>
</div>
