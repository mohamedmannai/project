<body>
  <% if flash[:alert] %>
  <div class="alert alert-success"><%= flash[:alert] %></div>
  <% end %>
   <!--========================== Contant-Area================================-->
   <div class="contant-area">
     <div class="container">
     <div class="row row-offcanvas row-offcanvas-left">
       <div class="col-md-3 col-sm-4 col-xs-6 sidebar-offcanvas" id="sidebar">
         <!--========================== left-sidebar ================================-->
         <div class="left-sidebar">
           <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
             <div class="panel panel-default">
                <% @categories.each do |category|%>
               <div class="panel-heading" role="tab" id="headingOne">
                 <h4 class="panel-title">
                   <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= category.id %>" aria-expanded="true" aria-controls="collapseOne"><%= category.label %>
                     <i class="fa fa-angle-right"></i>
                     <i class="fa fa-angle-down"></i>
                   </a>
                 </h4>
               </div>
               <div id="<%= category.id %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                 <div class="panel-body">
                   <ul>
                     <li><a href="#">Lorern ipsum</a></li>
                     <li><a href="#">Dolor sit amet</a></li>
                     <li><a href="#">Consectetur</a></li>
                     <li><a href="#">Adipisicing elit</a></li>
                     <li><a href="#">tempor</a></li>
                   </ul>
                 </div>
               </div>
               <%end%>
             </div>
           </div>
         </div><!-- left-sidebar -->
       </div>
       <!--========================== main-content ================================-->
       <div class="col-md-6 col-sm-8 col-xs-12">
         <div class="main-content">
           <% @ads.order("created_at desc").each do |ad| %>
           <article>
               <div class="post-img">
                 <a href="details.html" target="_blank"><img class="img-responsive" <%= image_tag("img-default.jpg")%> </a>
               </div>
                 <a href="/categories/<%= ad.category.try(:id) %> "  class="btn btn-default btn-sm btn-category" type="submit"><%= ad.category.try(:label) %></a>
                 <a href="<%= ad_path(ad.id)%>" target="_blank"><h2 class="post-title"><%= ad.title %></h2></a>
             <div class="post-meta">
               <span><a href="#"><i class="fa fa-share-alt post-meta-icon"></i> Ad by <%= ad.user.first_name %> </a></span>
               <span><a href="#"><i class="fa fa-calendar-check-o post-meta-icon"></i> <%= ad.created_at.strftime("%Y-%m-%d") %> </a></span>
               <span><a href="#"><i class="fa fa-home post-meta-icon"></i> <%= ad.location %> </a></span>
               <span><i class="price"></i> <%= ad.price %> TND</span>
             </div>
             <div class="post-content">
               <p><%= ad.description %></p>
             </div>
           </article>
           <% end %>
         </div><!-- main-content -->
         <div class="pagination">
           <nav>
             <ul class="pagination">
             <li><a href="#">1</a></li>
             <li><a href="#">2</a></li>
             <li><a href="#">3</a></li>
             <li><a href="#">4</a></li>
             <li><a href="#">Next</a></li>
             </ul>
           </nav>
         </div>
       </div>
       <!--========================== Right-Sidebar ================================-->
       <div class="col-md-3 col-sm-12 col-xs-12">
         <div class="right-sidebar">
           <div class="righ-sidebar-body">
             <div class="item">
               <a href=""><h3 class="post-title slide-title">Other Ads</h3></a>
               <div class="col-md-12 col-sm-6">
                 <% @ads.each do |ad| %>
                 <article>
                     <div class="post-img">
                       <a href="details.html" target="_blank"><img class="img-responsive" <%= image_tag("img-default.jpg")%> </a>
                     </div>
                       <a href="<%= ad_path(ad.id)%>" target="_blank"><h2 class="post-title"><%= ad.title %></h2></a>
                   <div class="post-meta">
                     <span><a href="#"><i class="fa fa-share-alt post-meta-icon"></i>Ad by <%= ad.user.first_name %> </a></span>
                     <span><a href="#"><i class="fa fa-calendar-check-o post-meta-icon"></i> <%= ad.created_at.strftime("%Y-%m-%d") %> </a></span>
                     <span><a href="#"><i class="fa fa-home post-meta-icon"></i> <%= ad.location %> </a></span>
                     <span><i class="price"></i> <%= ad.price %> TND</span>

                   </div>
                   <div class="post-content">
                     <p><%= ad.description %></p>
                   </div>
                 </article>
                 <% end %>
                </div>
             </div>
           </div><!-- Righ-sidebar-body -->
         </div><!-- Right-Sidebar -->
       </div>
     </div><!-- Container -->
   </div><!-- Content-area -->
   <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
   <!-- Include all compiled plugins (below), or include individual files as needed -->
   <script src="js/bootstrap.min.js"></script>
   <script src ="js/custom.js"></script>
 </body>
