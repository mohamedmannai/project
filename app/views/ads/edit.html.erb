<h1>Edit Ad</h1>
<%= form_for @ad do |f| %>

<div class="form-group">
  <label>Tilte</label>
  <%= f.text_field :title%>
</div>
<div class="form-group">
  <label>Description</label>
  <%= f.text_field :description%>
</div>
<div class="form-group">
  <label>Price</label>
  <%= f.text_field :price%>
</div>
<div class="form-group">
  <label>Location</label>
  <%= f.text_field :location%>
</div>
<div class="form-group">
  <button type="submit" class="btn btn-success" name="Edit">Edit</button>
</div>
<% end %>
